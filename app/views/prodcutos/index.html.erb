<style type="text/css">

  h1{
    color:white;
   }

   thead{
    color:white;
   }

    td{
    background-color: white;
   }

</style>
<p id="notice"><%= notice %></p>
<div id="muestra">

<h1>Lista de Productos</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Fecha vencimiento</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prodcutos.each do |prodcuto| %>
      <tr>
        <td><%= prodcuto.codigo %></td>
        <td><%= prodcuto.nombre %></td>
        <td><%= prodcuto.fecha_vencimiento %></td>
        <td><%= prodcuto.cantidad %></td>
        <td><%= prodcuto.Precio %></td>
        <td><%= link_to 'Rehabastecer o Retirar', prodcuto, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_prodcuto_path(prodcuto), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', prodcuto, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<br>

<%= link_to 'Registrar Producto', new_prodcuto_path, class: "btn btn-success" %>
<a class="btn btn-primary" href="veterinaria">Home</a>
