<style type="text/css">
   label{
    color:white;
   }

</style>


<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div class="container">
    <div class="alert alert-danger" role="alert">
      <font color="black"><h2><%= pluralize(@cliente.errors.count, "Error(s)") %> <br>No se guardara este Cliente:</h2></font>
      <% @cliente.errors.full_messages.each do |message| %>
        <font color="black"><li><%= message %></li></font>
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :ci %>
    <%= f.number_field :ci %>
  </div>
  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %>
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :telefono %>
    <%= f.number_field :telefono %>
  </div>
  <div class="field">
    <%= f.label :correo %>
    <%= f.text_field :correo %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit 'Guardar'%>
  </div>
  <br>
  
<% end %>
