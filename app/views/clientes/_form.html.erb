<style type="text/css">
   label{
    color:white;
   }
</style>
<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div class="container">
    <div class="alert alert-danger" role="alert">
      <font color="black"><h2><%= pluralize(@cliente.errors.count, "Error(s)") %> <br>No se guardara este Cliente:</h2></font>
      <% @cliente.errors.full_messages.each do |message| %>
        <font color="black"><li><%= message %></li></font>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="field, container">
    <table class="table">
      <tr>
        <td><%= f.label :ci %></td>
        <td><%= f.number_field :ci %></td>
      </tr>
      <tr>
        <td><%= f.label :nombre %></td>
        <td><%= f.text_field :nombre %></td>
      </tr>
      <tr>
        <td><%= f.label :apellido %></td>
        <td><%= f.text_field :apellido %></td>
      </tr>
      <tr>
        <td><%= f.label :telefono %></td>
        <td><%= f.number_field :telefono %></td>
      </tr>
      <tr>
        <td><%= f.label :correo %></td>
        <td><%= f.text_field :correo %></td>
      </tr>
    </table>
  </div>
</br>
  <div class="actions">
    <%= f.submit 'Guardar',class:"big ui button, ui inverted olive button"%>
  </div>
</br>

<% end %>
