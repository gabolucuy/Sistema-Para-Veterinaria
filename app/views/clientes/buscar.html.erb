<style type="text/css">
  thead{
    color:white;
  }
   td{
    background-color: white;
   }

  h1{
    color:white;
  }
</style>

<p id="notice"><%= notice %></p>

<h1>Lista de Clientes</h1>

<div class="row">

 <div class="col-md-6 col-md-offset-3">
  <%= form_tag({:controller => "clientes", :action => "buscar"}, :method => :get) do %>

    <%= label_tag("") %>

  <%= text_field_tag(:searchbox) %>

<%= submit_tag "Buscar" , class: "btn btn-info" %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Ci</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.ci %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.correo %></td>
        <td><%= link_to 'Ver', cliente, class: "btn btn-info"%></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) ,class: "btn btn-warning"%></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>

<br>

<%= link_to 'Registrar Cliente', new_cliente_path, class: "btn btn-success" %>
<a class="btn btn-primary" href="/veterinaria">Home</a>
