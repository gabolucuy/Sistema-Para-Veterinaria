<style type="text/css">

  h1{
    color:white;
   }

   thead{
    color:white;
   }

    td{
    background-color: white;
   }

</style>
<p id="notice"><%= notice %></p>
<div id="muestra">
<h1>Lista de Atenciones</h1>
<div class="row">
  <div class="col-md-5 col-md-offset-4">

  <table  class="table table-striped">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Mascota nombre</th>
        <th>Veterinario</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @atencions.each do |atencion| %>
        <tr>
          <td><%= atencion.fecha %></td>
          <td><%if Cliente.find_by(id: atencion.cliente_id) != nil %>
            <%= atencion.cliente.nombre %> <%= atencion.cliente.apellido %>
            <%else%>
            N/A
            <%end%>
          </td>
          <td><% if Mascotum.find_by(id: atencion.mascotum_id) != nil  %>
            <%= atencion.mascotum.nombre %>
            <%else%>
            N/A
            <%end%>
          </td>

          <td><% if Veterinario.find_by(id: atencion.veterinario_id) != nil  %>
            <%= atencion.veterinario.nombre%> <%= atencion.veterinario.apellido%>
            <%else%>
            N/A
            <%end%>
          </td>
          <td><%= link_to 'Ver', atencion, class: "btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_atencion_path(atencion) , class: "btn btn-warning"%></td>
          <td><%= link_to 'Eliminar', atencion, method: :delete, data: { confirm: 'Esta seguro?' } , class: "btn btn-danger"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
<br>

<%= link_to 'New Atencion', new_atencion_path , class: "btn btn-success" %>
<a  class="btn btn-primary" href="veterinaria">Home</a>
